#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix the issues before committing."
  exit 1
fi

# Run type checking
npm run typecheck
if [ $? -ne 0 ]; then
  echo "❌ Type checking failed. Please fix the issues before committing."
  exit 1
fi

# Run Prettier formatting check
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "❌ Code formatting issues found. Running Prettier..."
  npx prettier --write .
  echo "✅ Code formatted. Please add the changes and commit again."
  exit 1
fi

echo "✅ All pre-commit checks passed!"