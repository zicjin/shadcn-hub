#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues before committing."
  exit 1
fi

# Run type checking
npm run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Please fix the issues before committing."
  exit 1
fi

# Run Prettier formatting check
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Running Prettier..."
  npx prettier --write .
  echo "âœ… Code formatted. Please add the changes and commit again."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"